{
    "name": "heic",
    "version": "0.0.4",
    "description": "Convert image from .HEIC to .JPG",
    "main": "index.js",
    "preferGlobal": true,
    "bin": {
        "heic": "bin/cli.js"
    },
    "scripts": {
        "start": "node index.js",
        "dev": "nodemon index.js",
        "build": "pkg index.js --targets node16-win-x64 && rename index.exe heic.exe",
        "lint": "eslint .",
        "lint:fix": "eslint --fix ."
    },
    "keywords": [
        "convert",
        "image",
        "heic",
        "jpg",
        "jpeg",
        "cli"
    ],
    "author": {
        "name": "Oleshkooo",
        "url": "https://github.com/Oleshkooo"
    },
    "homepage": "https://github.com/Oleshkooo/npm-heic#readme",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Oleshkooo/npm-heic.git"
    },
    "bugs": {
        "url": "https://github.com/Oleshkooo/npm-heic/issues"
    },
    "dependencies": {
        "chalk": "^4.1.2",
        "heic-convert": "^1.2.4",
        "progress": "^2.0.3"
    },
    "devDependencies": {
        "@eslint/create-config": "^0.3.1",
        "eslint": "^8.24.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.7.1"
    }
}
